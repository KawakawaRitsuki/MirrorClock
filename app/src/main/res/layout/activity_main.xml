<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.mizucofee.mirrorclock.MainActivity"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <net.mizucofee.mirrorclock.MirroredFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp"
                android:paddingRight="18dp"
                android:paddingTop="18dp"
                android:id="@+id/week"
                android:textColor="#2a6aff"
                android:textSize="32sp"
                app:customFont="14seg.ttf" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <net.mizucofee.mirrorclock.MirroredFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/date"
                android:textColor="#2a6aff"
                android:textSize="54sp"
                app:customFont="14seg.ttf" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <net.mizucofee.mirrorclock.MirroredFontTextView
            android:id="@+id/sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:paddingTop="18dp"
            android:textColor="#2a6aff"
            android:textSize="70sp"
            app:customFont="7seg.ttf" />


        <net.mizucofee.mirrorclock.MirroredFontTextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:paddingTop="18dp"
            android:textColor="#2a6aff"
            android:textSize="100sp"
            app:customFont="7seg.ttf" />

        <net.mizucofee.mirrorclock.MirroredFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:id="@+id/coron"
            android:paddingTop="18dp"
            android:textColor="#2a6aff"
            android:textSize="100sp"
            app:customFont="7seg.ttf" />

        <net.mizucofee.mirrorclock.MirroredFontTextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="18dp"
            android:paddingTop="18dp"
            android:textColor="#2a6aff"
            android:textSize="100sp"
            app:customFont="7seg.ttf" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:orientation="horizontal"
        android:background="#555">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="#555"
                    android:padding="16dp"
                    app:srcCompat="@drawable/nosmoking" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#555"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/black"
                            android:orientation="horizontal">

                            <net.mizucofee.mirrorclock.MirroredFontTextView
                                android:id="@+id/marquee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:lines="1"
                                android:paddingTop="6dp"
                                android:text="あいうえお"
                                android:textColor="#b8ff2a"
                                android:textSize="36sp"
                                app:customFont="hibiya.ttf" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/black"
                        android:orientation="vertical">

                        <net.mizucofee.mirrorclock.MirroredTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:text="指定席"
                            android:textColor="#00791e"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <net.mizucofee.mirrorclock.MirroredTextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-6dp"
                            android:gravity="center"
                            android:text="Reserved"
                            android:textColor="#00791e"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="#555"
                android:orientation="horizontal">

                <net.mizucofee.mirrorclock.MirroredTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#666"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="36sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>
